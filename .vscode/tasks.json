{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "build-hyperspace",
            "type": "shell",
			"options": {
                "cwd": "${workspaceFolder}/../hyperspace/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "build0",
                "clear": true
            },
			"isBackground": false,
			"problemMatcher": ["$gcc"],
            "osx": {
                "command": "make -j8"
            },
            "linux": {
                "command": "make -j8",
                "options":{
                    "env":{"VERBOSE":"1"}
                }
            }
        }
    ]
}